# Production Environment Configuration
# Copy this file to .env for production deployment

# Environment
NODE_ENV=production

# Server Configuration
PORT=4175
HOST=0.0.0.0

# Security (Article V: Security)
# CRITICAL: MUST be changed to a secure random value
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=<CHANGE_ME_PRODUCTION_REQUIRED>

# CORS Configuration
# IMPORTANT: Update with actual production domains only
CORS_ALLOWED_ORIGINS=https://example.com,https://www.example.com,https://mobile-emulator.example.com

# Feature Flags
ENABLE_DEBUG_MODE=false
ENABLE_ANALYTICS=true

# Logging
# Use 'warn' or 'error' for production to reduce log volume
LOG_LEVEL=warn

# Public Directory
PUBLIC_DIR=public