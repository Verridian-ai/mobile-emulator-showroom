# Staging Environment Configuration
# Copy this file to .env for staging deployment

# Environment
NODE_ENV=staging

# Server Configuration
PORT=4175
HOST=0.0.0.0

# Security (Article V: Security)
# IMPORTANT: Replace with actual staging secret
SESSION_SECRET=<CHANGE_ME_STAGING_SECRET>

# CORS Configuration
# Update with actual staging domain
CORS_ALLOWED_ORIGINS=https://staging.example.com,https://staging-mobile-emulator.example.com

# Feature Flags
ENABLE_DEBUG_MODE=true
ENABLE_ANALYTICS=true

# Logging
LOG_LEVEL=info

# Public Directory
PUBLIC_DIR=public