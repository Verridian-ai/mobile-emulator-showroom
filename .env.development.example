# Development Environment Configuration
# Copy this file to .env for local development

# Environment
NODE_ENV=development

# Server Configuration
PORT=4175
HOST=localhost

# Security (Article V: Security)
# Note: This is a development-only secret, NOT for production
SESSION_SECRET=dev-session-secret-not-for-production

# CORS Configuration
# Allow local development origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4175,http://127.0.0.1:4175

# Feature Flags
ENABLE_DEBUG_MODE=true
ENABLE_ANALYTICS=false

# Logging
LOG_LEVEL=debug

# Public Directory
PUBLIC_DIR=public